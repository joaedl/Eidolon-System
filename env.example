# Database
DATABASE_URL=postgresql+asyncpg://eidolon:eidolon@localhost:5432/eidolon
REDIS_URL=redis://localhost:6379

# Cloud Configuration
CLOUD_HOST=controller.eidolon.cloud
CLOUD_PORT=443
MQTT_HOST=mqtt.eidolon.cloud
MQTT_PORT=8883

# Security
JWT_SECRET_KEY=your-secret-key-here
DEVICE_CERT_PATH=/etc/eidolon/certs/device.crt
DEVICE_KEY_PATH=/etc/eidolon/certs/device.key
CA_CERT_PATH=/etc/eidolon/certs/ca.crt

# Storage
S3_ENDPOINT=https://s3.eidolon.cloud
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=eidolon-data

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TELEMETRY_TOPIC=telemetry
KAFKA_EVENTS_TOPIC=events

# WebRTC/TURN
TURN_SERVER=turn.eidolon.cloud
TURN_PORT=3478
TURN_USERNAME=your-turn-user
TURN_PASSWORD=your-turn-password

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
SENTRY_DSN=your-sentry-dsn

# Robot Configuration
ROBOT_ID=robot-001
ROBOT_TENANT_ID=tenant-001
SAFETY_ENABLED=true
AUTONOMOUS_MODE=true
